// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         Int       @id @default(autoincrement())
  user_id    String
  txHash     String
  amount     BigInt
  created_at DateTime  @default(now())
  status     Status
  type       Operation
}

enum Operation {
  CREDIT
  DEBIT
}

enum Status {
  PENDING
  DONE
  FAILED
}
